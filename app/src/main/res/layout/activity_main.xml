<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.quanlm.project01_mvp.MainActivity">

    <Button
        android:id="@+id/btnTaxiFare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính tiền taxi"/>
    <Button
        android:id="@+id/btnEquation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải phương trình bậc 1"/>
    <Button
        android:id="@+id/btnEquation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải phương trình bậc 2"/>
    <Button
        android:id="@+id/btnPrimeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kiểm tra số nguyên tố"/>
    <Button
        android:id="@+id/btnPerfectNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm số hoàn hảo"/>
    <Button
        android:id="@+id/btnFibonacci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tìm số fibonacci"/>

</LinearLayout>
